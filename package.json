{
  "name": "toulouse-design-system",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "setup": "npm run setup:composer && npm run setup:phpcs",
    "setup:composer": "curl -sS https://getcomposer.org/installer | php",
    "setup:phpcs": "php composer.phar require --dev squizlabs/php_codesniffer wp-coding-standards/wpcs",
    "wp:generate": "node scripts/config/generate-wp-templates.js",
    "wp:generate:debug": "DEBUG_MODE=true node scripts/config/generate-wp-templates.js",
    "wp:generate:fast": "SKIP_PHPCS=true node scripts/config/generate-wp-templates.js",
    "wp:validate": "node scripts/validation/cli/validate-offline.js",
    "wp:validate:render": "node scripts/validation/cli/validate-offline.js --components-only",
    "wp:test-urls": "node scripts/validation/cli/validate-live.js",
    "phpcs": "php composer.phar exec phpcs -- --standard=WordPress wordpress-output/",
    "phpcs:fix": "php composer.phar exec phpcbf -- --standard=WordPress wordpress-output/",
    "wp:lint": "php composer.phar exec phpcs -- --standard=WordPress wordpress-output/",
    "wp:lint:fix": "php composer.phar exec phpcbf -- --standard=WordPress wordpress-output/",
    "stories:generate": "node scripts/storybook/generate-stories.js",
    "stories:generate:robust": "node scripts/storybook/generate-stories-robust.js",
    "stories:test": "node scripts/storybook/test-story-generator.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@chromatic-com/storybook": "^3.2.7",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-vite": "^8.6.14",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "cssnano": "^7.1.1",
    "dotenv": "^17.2.2",
    "lighthouse": "^12.0.0",
    "postcss": "^8.5.6",
    "storybook": "^8.6.14",
    "terser": "^5.43.1",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "lit": "^3.3.1"
  }
}
