{
  "postTypes": {
    "carrera": {
      "labels": {
        "name": "Carreras",
        "singular_name": "Carrera"
      },
      "public": true,
      "supports": ["title", "editor", "thumbnail", "excerpt"],
      "show_in_rest": true
    },
    "testimonio": {
      "labels": {
        "name": "Testimonios",
        "singular_name": "Testimonio"
      },
      "public": true,
      "supports": ["title", "editor", "thumbnail", "excerpt"],
      "show_in_rest": true
    },
    "curso": {
      "labels": {
        "name": "Cursos",
        "singular_name": "Curso"
      },
      "public": true,
      "supports": ["title", "editor", "thumbnail", "excerpt"]
    },
    "producto": {
      "labels": {
        "name": "Productos",
        "singular_name": "Producto"
      },
      "public": true,
      "supports": ["title", "editor", "thumbnail", "excerpt", "custom-fields"],
      "show_in_rest": true
    }
  },
  "templates": {
    "page-carreras": {
      "file": "page-carreras.php",
      "title": "Carreras",
      "description": "Explora nuestras carreras técnicas y programas especializados"
    },
    "page-contacto": {
      "file": "page-contacto.php", 
      "title": "Contacto",
      "description": "Ponte en contacto con nosotros"
    },
    "single-carrera": {
      "file": "single-carrera.php",
      "title": "Carrera",
      "description": "Detalle de carrera"
    },
    "page-test-showcase": {
      "file": "page-test-showcase.php",
      "title": "Test Showcase - Validación Completa",
      "description": "Página para probar todos los managers del sistema",
      "expectedComponents": ["test-showcase"],
      "url": "/test-showcase/"
    }
  },
  "componentMapping": {
    "course-card": "carrera",
    "testimonials": "testimonio"
  },
  "hero-section": {
    "type": "static",
    "phpFunction": "render_hero_section",
    "parameters": [
      { "name": "title", "type": "string", "default": "" },
      { "name": "subtitle", "type": "string", "default": "" },
      { "name": "cta_text", "type": "string", "default": "" },
      { "name": "background_image", "type": "string", "default": "" }
    ],
    "template": "hero-section",
    "performance": {
      "lazyLoading": false,
      "preloadImages": true
    }
  },
  "course-card": {
    "type": "iterative",
    "phpFunction": "render_course_card",
    "parameters": [
      { "name": "title", "type": "string", "default": "" },
      { "name": "description", "type": "string", "default": "" },
      { "name": "image", "type": "string", "default": "" },
      { "name": "link", "type": "string", "default": "" },
      { "name": "link_text", "type": "string", "default": "Ver más" }
    ],
    "template": "course-card",
    "iteration": {
      "mode": "individual",
      "renderPerItem": true
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "testimonials": {
    "type": "aggregated",
    "phpFunction": "render_testimonials",
    "parameters": [
      { "name": "title", "type": "string", "default": "" },
      { "name": "subtitle", "type": "string", "default": "" },
      { "name": "testimonials", "type": "array", "default": "[]" }
    ],
    "template": "testimonials",
    "aggregation": {
      "mode": "collect",
      "dataStructure": {
        "name": "post_title",
        "role": "post_excerpt", 
        "content": "post_content",
        "rating": {
          "source": "meta_rating",
          "type": "native"
        },
        "avatar": {
          "source": "meta_avatar", 
          "type": "acf"
        },
        "course": {
          "source": "meta_course",
          "type": "acf"
        }
      },
      "defaultValues": {
        "rating": 5
      }
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "feature-grid": {
    "type": "aggregated",
    "phpFunction": "render_feature_grid",
    "parameters": [
      { "name": "title", "type": "string", "default": "" },
      { "name": "subtitle", "type": "string", "default": "" },
      { "name": "features", "type": "array", "default": "[]" }
    ],
    "template": "feature-grid",
    "aggregation": {
      "mode": "collect",
      "dataStructure": {
        "title": "post_title",
        "description": "post_content",
        "icon": {
          "source": "meta_icon",
          "type": "acf"
        }
      },
      "defaultValues": {
        "icon": "✨"
      }
    }
  },
  "interactive-gallery": {
    "type": "interactive",
    "phpFunction": "render_interactive_gallery",
    "parameters": [
      { "name": "title", "type": "string", "default": "" },
      { "name": "subtitle", "type": "string", "default": "" },
      { "name": "images", "type": "array", "default": "[]" },
      { "name": "autoPlay", "type": "boolean", "default": "true" },
      { "name": "showThumbnails", "type": "boolean", "default": "true" }
    ],
    "template": "interactive-gallery",
    "interaction": {
      "mode": "stateful",
      "events": [
        "image-changed",
        "autoplay-toggled", 
        "lightbox-open"
      ],
      "stateManagement": true
    }
  },
  "test-showcase": {
    "type": "comprehensive",
    "phpFunction": "render_test_showcase",
    "parameters": [
      { "name": "title", "type": "string", "default": "Test Showcase - Validación Completa" },
      { "name": "description", "type": "string", "default": "Componente para probar todos los managers" },
      { "name": "testImages", "type": "array", "default": "array()" },
      { "name": "testData", "type": "object", "default": "array()" },
      { "name": "enableAnalytics", "type": "boolean", "default": "true" }
    ],
    "wordpressData": {
      "fields": {
        "title": {
          "source": "post_title",
          "type": "native"
        },
        "description": {
          "source": "post_excerpt",
          "type": "native"
        },
        "testImages": {
          "source": "meta_test_images",
          "type": "acf"
        },
        "testData": {
          "source": "meta_test_data",
          "type": "acf"
        },
        "enableAnalytics": {
          "source": "meta_enable_analytics",
          "type": "acf"
        }
      },
      "defaultValues": {
        "enableAnalytics": true,
        "testImages": [
          { "src": "https://via.placeholder.com/300x200/FF6B35/FFFFFF?text=Test+1", "alt": "Imagen de prueba 1" },
          { "src": "https://via.placeholder.com/300x200/F7931E/FFFFFF?text=Test+2", "alt": "Imagen de prueba 2" }
        ]
      }
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    },
    "analytics": {
      "events": ["page_view", "component_view", "button_click", "image_interaction", "form_submit"],
      "category": "test_showcase",
      "trackingEnabled": true
    },
    "seo": {
      "schema": "WebPage",
      "structuredData": true,
      "priority": "high"
    }
  }
}
