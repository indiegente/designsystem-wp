        { "name": "user_photo", "type": "string", "fieldType": "image" },
        { "name": "course", "type": "string", "fieldType": "text" }
      ]
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "feature-grid": {
    "type": "aggregated",
    "phpFunction": "render_feature_grid",
