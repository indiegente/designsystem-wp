{
  "wordpress_plugins": {
    "security": {
      "plugin": "headers-security-advanced-hsts-wp",
      "auto_install": true,
      "config": {
        "headers": ["csp", "hsts", "xss-protection"],
        "theme_color": "#FF6B35"
      }
    },
    "performance": {
      "plugin": "wp-rest-cache",
      "auto_install": true,
      "config": {
        "cache_duration": 3600,
        "endpoints": [
          "/wp-json/wp/v2/posts",
          "/wp-json/wp/v2/pages",
          "/wp-json/theme/v1/*"
        ]
      }
    },
    "seo": {
      "plugin": "seo-by-rank-math",
      "auto_install": true,
      "config": {
        "features": ["rich_snippets", "xml_sitemap", "breadcrumbs"],
        "primary_color": "#FF6B35",
        "company_name": "Toulouse Design System"
      }
    },
    "analytics": {
      "plugin": "google-analytics-for-wordpress",
      "auto_install": true,
      "config": {
        "tracking_code": "{{GA4_TRACKING_ID}}",
        "features": ["enhanced_ecommerce", "demographics", "events"],
        "anonymize_ip": true
      }
    },
    "cloud_storage": {
      "plugin": "wp-stateless",
      "auto_install": true,
      "config": {
        "bucket_name": "{{GCS_BUCKET_NAME}}",
        "mode": "cdn",
        "cache_control": "public, max-age=2592000"
      }
    }
  },
  "hero-section": {
    "type": "static",
    "phpFunction": "render_hero_section",
    "parameters": [
      { "name": "title", "type": "string", "default": "", "escape": "html" },
      { "name": "subtitle", "type": "string", "default": "", "escape": "html" },
      { "name": "ctaText", "type": "string", "default": "", "escape": "html" },
      { "name": "backgroundImage", "type": "string", "default": "", "escape": "url" }
    ],
    "performance": {
      "lazyLoading": false,
      "preloadImages": true
    }
  },
  "course-card": {
    "type": "iterative",
    "phpFunction": "render_course_card",
    "parameters": [
      { "name": "title", "type": "string", "default": "", "escape": "html" },
      { "name": "description", "type": "string", "default": "", "escape": "html" },
      { "name": "image", "type": "string", "default": "", "escape": "url" },
      { "name": "link", "type": "string", "default": "", "escape": "url" },
      { "name": "linkText", "type": "string", "default": "Ver más", "escape": "html" }
    ],
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "testimonials": {
    "type": "aggregated",
    "phpFunction": "render_testimonials",
    "parameters": [
      { "name": "title", "type": "string", "default": "", "escape": "html" },
      { "name": "subtitle", "type": "string", "default": "", "escape": "html" },
      { "name": "testimonials", "type": "array", "default": "[]", "escape": "none" }
    ],
    "arrayFields": {
      "testimonials": [
        { "name": "name", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "role", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "content", "type": "string", "fieldType": "textarea", "escape": "html" },
        { "name": "rating", "type": "number", "fieldType": "number", "escape": "html" },
        { "name": "user_photo", "type": "string", "fieldType": "image", "escape": "url" },
        { "name": "course", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "feature-grid": {
    "type": "aggregated",
    "phpFunction": "render_feature_grid",
    "parameters": [
      { "name": "title", "type": "string", "default": "", "escape": "html" },
      { "name": "subtitle", "type": "string", "default": "", "escape": "html" },
      { "name": "features", "type": "array", "default": "[]", "escape": "none" }
    ],
    "arrayFields": {
      "features": [
        { "name": "icon", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "description", "type": "string", "fieldType": "textarea", "escape": "html" }
      ]
    }
  },
  "interactive-gallery": {
    "type": "comprehensive",
    "phpFunction": "render_interactive_gallery",
    "parameters": [
      { "name": "title", "type": "string", "default": "", "escape": "html" },
      { "name": "subtitle", "type": "string", "default": "", "escape": "html" },
      { "name": "images", "type": "array", "default": "[]", "escape": "none" },
      { "name": "autoPlay", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "showThumbnails", "type": "boolean", "default": true, "escape": "attr" }
    ],
    "arrayFields": {
      "images": [
        { "name": "src", "type": "string", "fieldType": "image", "escape": "url" },
        { "name": "alt", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "caption", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    }
  },
  "test-showcase": {
    "type": "static",
    "phpFunction": "render_test_showcase",
    "parameters": [
      { "name": "title", "type": "string", "default": "Test Showcase - Validación Completa", "escape": "html" },
      { "name": "description", "type": "string", "default": "Componente para probar todos los managers", "escape": "html" },
      { "name": "testImages", "type": "array", "default": [], "escape": "none" },
      { "name": "testData", "type": "object", "default": {}, "escape": "none" },
      { "name": "enableAnalytics", "type": "boolean", "default": true, "escape": "attr" }
    ],
    "arrayFields": {
      "testImages": [
        { "name": "src", "type": "string", "fieldType": "image", "escape": "url" },
        { "name": "alt", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    },
    "performance": {
      "lazyLoading": true,
      "preloadImages": false
    }
  },
  "site-header": {
    "type": "static",
    "phpFunction": "render_site_header",
    "parameters": [
      { "name": "siteName", "type": "string", "default": "Design System Site", "escape": "html" },
      { "name": "homeUrl", "type": "string", "default": "/", "escape": "url" },
      { "name": "showNavigation", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "navigationItems", "type": "array", "default": [], "escape": "none" }
    ],
    "arrayFields": {
      "navigationItems": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    }
  },
  "site-footer": {
    "type": "static",
    "phpFunction": "render_site_footer",
    "parameters": [
      { "name": "siteName", "type": "string", "default": "Design System Site", "escape": "html" },
      { "name": "showCopyright", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "showNavigation", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "navigationItems", "type": "array", "default": [], "escape": "none" },
      { "name": "socialLinks", "type": "array", "default": [], "escape": "none" },
      { "name": "customText", "type": "string", "default": "Todos los derechos reservados.", "escape": "html" }
    ],
    "arrayFields": {
      "navigationItems": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" }
      ],
      "socialLinks": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "icon", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    }
  },
  "error-404": {
    "type": "static",
    "phpFunction": "render_error_404",
    "parameters": [
      { "name": "title", "type": "string", "default": "404", "escape": "html" },
      { "name": "subtitle", "type": "string", "default": "Página no encontrada", "escape": "html" },
      { "name": "description", "type": "string", "default": "Lo sentimos, la página que buscas no existe o ha sido movida.", "escape": "html" },
      { "name": "homeUrl", "type": "string", "default": "/", "escape": "url" },
      { "name": "homeText", "type": "string", "default": "Volver al inicio", "escape": "html" },
      { "name": "showSearch", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "showSuggestions", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "suggestions", "type": "array", "default": [], "escape": "none" },
      { "name": "handleSearch", "type": "string", "default": "", "escape": "html" },
      { "name": "searchPlaceholder", "type": "string", "default": "Buscar...", "escape": "html" }
    ],
    "arrayFields": {
      "suggestions": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "description", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    }
  },
  "search-results": {
    "type": "static",
    "phpFunction": "render_search_results",
    "parameters": [
      { "name": "searchTerm", "type": "string", "default": "", "escape": "html" },
      { "name": "totalResults", "type": "number", "default": 0, "escape": "html" },
      { "name": "results", "type": "array", "default": [], "escape": "none" },
      { "name": "showNoResults", "type": "boolean", "default": false, "escape": "attr" },
      { "name": "noResultsTitle", "type": "string", "default": "No se encontraron resultados", "escape": "html" },
      { "name": "noResultsMessage", "type": "string", "default": "Intenta con otros términos de búsqueda.", "escape": "html" },
      { "name": "showSuggestions", "type": "boolean", "default": true, "escape": "attr" },
      { "name": "suggestions", "type": "array", "default": "array()", "escape": "none" }
    ],
    "arrayFields": {
      "results": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "excerpt", "type": "string", "fieldType": "textarea", "escape": "html" },
        { "name": "date", "type": "string", "fieldType": "date", "escape": "html" },
        { "name": "type", "type": "string", "fieldType": "text", "escape": "html" }
      ],
      "suggestions": [
        { "name": "url", "type": "string", "fieldType": "url", "escape": "url" },
        { "name": "title", "type": "string", "fieldType": "text", "escape": "html" },
        { "name": "description", "type": "string", "fieldType": "text", "escape": "html" }
      ]
    }
  }
}
